#!/usr/bin/python
import sys
from transforms import *
import numpy as np
import OpenGL.GL as gl
import OpenGL.GLU as glu
import OpenGL.GLUT as glut
import OpenGL.GL.framebufferobjects as glfbo

program = None
windowHeight = 512
windowWidth = 512

def display():
  camera.render('user')
  Shadows.render()

  gl.glBindFramebuffer(gl.GL_FRAMEBUFFER, displayFBOs[0])
  gl.glClear(gl.GL_DEPTH_BUFFER_BIT | gl.GL_COLOR_BUFFER_BIT)
  gl.glViewport(0,0,windowWidth,windowHeight)

  camera.render()
  projection = perspective( 60.0, windowWidth/float(windowHeight), 0.3, 8000.0 )
  setUniform('projection',projection)
  setUniform('aspectRatio',windowWidth/float(windowHeight))
  
  camera.render()
  
  Terrain.display()
#  Marker.display()
  #Road.display()
#  Forest.display(camera.pos)

  gl.glBindFramebuffer(gl.GL_FRAMEBUFFER, displayFBOs[1])
  gl.glClear(gl.GL_DEPTH_BUFFER_BIT | gl.GL_COLOR_BUFFER_BIT)
  gl.glViewport(0,0,windowWidth,windowHeight)

  Sky.display(displayColorTextures[0],displayDepthTextures[0])

  #gl.glBindFramebuffer(gl.GL_FRAMEBUFFER, displayFBOs[1])
  #gl.glClear(gl.GL_DEPTH_BUFFER_BIT | gl.GL_COLOR_BUFFER_BIT)
  #gl.glViewport(0,0,windowWidth,windowHeight)

  gl.glBindFramebuffer(gl.GL_FRAMEBUFFER, 0)
  gl.glClear(gl.GL_COLOR_BUFFER_BIT | gl.GL_DEPTH_BUFFER_BIT)
  gl.glViewport(0,0,windowWidth,windowHeight)
  
  postrender.display(displayColorTextures[1],displayDepthTextures[1])

  glut.glutSwapBuffers()
  
  
t = 1.0
def timer(fps):
  global t
  t -= 1.0/fps
  if t<0:
    glut.glutSetWindowTitle("PM3 "+ str(fps) + " fps")
    t = 3.0
#  Marker.timeUpdate(1.0/fps)
  s = 800
  if 'w' in keys:
    camera.move(s * 1.0/fps)
  if 's' in keys:
    camera.move(s * -1.0/fps)
  if 'e' in keys:
    camera.rotUpDown(1.5/fps)
  if 'q' in keys:
    camera.rotUpDown(-1.5/fps)
  if 'a' in keys:
    camera.rotLeftRight(-1.5/fps)
  if 'd' in keys:
    camera.rotLeftRight(1.5/fps)
  glut.glutTimerFunc(1000/fps, timer, fps)
  glut.glutPostRedisplay()

def reshape(width,height):
  global windowHeight,windowWidth
  windowHeight = height
  windowWidth = width
  for i in xrange(NUMSTAGES):
    displayColorTextures[i].loadData(width,height,None)
    displayDepthTextures[i].load()
    gl.glTexImage2D(gl.GL_TEXTURE_2D, 0,gl.GL_DEPTH_COMPONENT32, width, height, 0,gl.GL_DEPTH_COMPONENT, gl.GL_FLOAT, None)

keys = set()
def keyboard(key,x,y):
  if key=='\033':
    #    Shadows.cleanup()
    sys.exit(0)
  if key=='p':
    print camera.pos
  keys.add(key)
def keyboardUp(key,x,y):
  keys.remove(key)
def mouse(button,state,x,y):
  print button,state,x,y

glut.glutInit()
glut.glutInitDisplayMode(glut.GLUT_DOUBLE | glut.GLUT_RGBA | glut.GLUT_DEPTH)
glut.glutInitWindowSize(512,512);
glut.glutCreateWindow("PM4")
gl.glEnable(gl.GL_DEPTH_TEST)
gl.glPolygonMode(gl.GL_FRONT,gl.GL_FILL );
#gl.glPolygonMode(gl.GL_FRONT_AND_BACK,gl.GL_LINE );
gl.glEnable(gl.GL_TEXTURE_2D)
gl.glEnable(gl.GL_BLEND)
gl.glBlendFunc(gl.GL_SRC_ALPHA, gl.GL_ONE_MINUS_SRC_ALPHA);
glut.glutReshapeFunc(reshape)
glut.glutDisplayFunc(display)
glut.glutKeyboardFunc(keyboard)
glut.glutMouseFunc(mouse)
glut.glutKeyboardUpFunc(keyboardUp)
glut.glutTimerFunc(1000/60, timer, 60)

from Shaders import *
from Camera import Camera
import Texture
#import Marker
import Terrain
import noiseG
#import Road
gl.glClear(gl.GL_COLOR_BUFFER_BIT | gl.GL_DEPTH_BUFFER_BIT)
projection = perspective( 60.0, 1, 0.3, 8000.0 )
setUniform('projection',projection)
setUniform('fogLevel',8.0)
setUniform('maxFog',1000.0)
#import Forest

import Shadows
import postrender
import Sky

camera = Camera(np.array([30.,80,480]))
camera.rotLeftRight(-3.141592/2*0)
camera.render()
Shadows.lockCam = camera
#camera.locked = True
#for i in xrange(-10,10):
#  for j in xrange(-10,10):
#    Marker.addMarker(400*np.array([i,0,j]))
#Marker.freeze()
    
noiseG.load(setUniform)
NUMSTAGES = 2
displayFBOs = [gl.glGenFramebuffers(1) for i in xrange(NUMSTAGES)]
displayColorTextures = [None for i in xrange(NUMSTAGES)]
displayDepthTextures = [None for i in xrange(NUMSTAGES)]
for i in xrange(NUMSTAGES):
  print "Initialising FBO",i+1
  gl.glBindFramebuffer(gl.GL_FRAMEBUFFER, displayFBOs[i])

  displayColorTextures[i] = Texture.Texture(Texture.COLORMAP)
  displayColorTextures[i].load()
  gl.glTexParameteri(gl.GL_TEXTURE_2D, gl.GL_TEXTURE_WRAP_S, gl.GL_REPEAT)
  gl.glTexParameteri(gl.GL_TEXTURE_2D, gl.GL_TEXTURE_WRAP_T, gl.GL_REPEAT)
  gl.glTexParameteri(gl.GL_TEXTURE_2D, gl.GL_TEXTURE_MAG_FILTER, gl.GL_NEAREST)
  gl.glTexParameteri(gl.GL_TEXTURE_2D, gl.GL_TEXTURE_MIN_FILTER, gl.GL_NEAREST_MIPMAP_NEAREST)    
  displayColorTextures[i].loadData(1,1,None)
  displayDepthTextures[i] = Texture.Texture(Texture.DEPTHMAP)
  displayDepthTextures[i].load()
  gl.glTexParameteri(gl.GL_TEXTURE_2D, gl.GL_TEXTURE_WRAP_S, gl.GL_REPEAT)
  gl.glTexParameteri(gl.GL_TEXTURE_2D, gl.GL_TEXTURE_WRAP_T, gl.GL_REPEAT)
  gl.glTexParameteri(gl.GL_TEXTURE_2D, gl.GL_TEXTURE_MAG_FILTER, gl.GL_NEAREST)
  gl.glTexParameteri(gl.GL_TEXTURE_2D, gl.GL_TEXTURE_MIN_FILTER, gl.GL_NEAREST)    
  gl.glTexParameteri(gl.GL_TEXTURE_2D, gl.GL_TEXTURE_COMPARE_FUNC,gl.GL_LEQUAL)
  gl.glTexParameteri(gl.GL_TEXTURE_2D, gl.GL_TEXTURE_COMPARE_MODE,gl.GL_NONE)
  gl.glTexImage2D(gl.GL_TEXTURE_2D, 0,gl.GL_DEPTH_COMPONENT32, 1, 1, 0,gl.GL_DEPTH_COMPONENT, gl.GL_FLOAT, None)

  gl.glFramebufferTexture(gl.GL_FRAMEBUFFER, gl.GL_DEPTH_ATTACHMENT, displayDepthTextures[i].id, 0)
  gl.glFramebufferTexture(gl.GL_FRAMEBUFFER,gl.GL_COLOR_ATTACHMENT0, displayColorTextures[i].id, 0);
  gl.glDrawBuffers(1,[gl.GL_COLOR_ATTACHMENT0])
  glfbo.checkFramebufferStatus()

print "Initialisation finished."

glut.glutMainLoop()
